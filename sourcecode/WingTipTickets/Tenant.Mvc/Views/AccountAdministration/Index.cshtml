@model IEnumerable<Tenant.Mvc.Models.CustomersDB.Customer>

<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Customer Administration Portal</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <fieldset>
        <div class="row row-underline-light">
            <h2>Customers</h2>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Firstname</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.PhoneNumber
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </fieldset>
</div>